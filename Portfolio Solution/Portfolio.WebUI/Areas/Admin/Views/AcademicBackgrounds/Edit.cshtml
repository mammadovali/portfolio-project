@model AcademicBackground

@{
    ViewData["Title"] = "Edit";
}

<!-- Page-header start -->
<div class="page-header">
    <div class="row align-items-end">
       
        <div class="col">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-controller="Dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <a asp-action="index">All academic backgrounds</a>
                    </li>
                    <li class="breadcrumb-item" style="float: left;">
                        <span>Edit</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<!-- Page-header end -->
<!-- Page-body start -->
<div class="page-body">
    <div class="card">
        <div class="card-block">
            <h4 class="sub-title">Basic Inputs</h4>

            <form method="post" autocomplete="off" enctype="multipart/form-data">
                <div class="form-group row">
                    <label asp-for="Duration" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Duration" class="form-control" />
                        <span asp-validation-for="Duration" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Qualification" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Qualification" class="form-control" />
                        <span asp-validation-for="Qualification" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Degree" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="Degree" class="form-control" />
                        <span asp-validation-for="Degree" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">University or high school name</label>
                    <div class="col-sm-10">
                        <input asp-for="InstituteOrUniversityName" class="form-control" />
                        <span asp-validation-for="InstituteOrUniversityName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <label asp-for="Details" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <textarea asp-for="Details" class="form-control" id="body"></textarea>
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-12 d-flex justify-content-end">
                        <input hidden asp-for="Id" />
                        <button class="btn btn-primary mr-2">Save</button>
                        <a asp-action="index" class="btn btn-info">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Page-body end -->
@section addjs{
<script class="removable" src="~/libs/ckeditor5/ckeditor.min.js"></script>

<script>
    
    ClassicEditor
        .create( document.querySelector( '#body' ) )
        .catch( error => {
            console.error( error );
        } );

        
</script>
}




